generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id                Int             @id @default(autoincrement())
  name              String?
  email             String          @unique
  password          String
  role              Role            @default(USER)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
}

model Applications {
  id                Int             @id @default(autoincrement())
  phone             String
  email             String
  processed         Boolean         @default(false)
  reservation       Boolean         @default(false)
  rentStatus        Boolean         @default(false)
  RentId            Int
  rent              Rents           @relation(fields: [RentId], references: [id])
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
}

model Rents {
  id                Int             @id @default(autoincrement())
  address           String
  price             String
  image             String
  application       Applications[]
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
}

model Reviews {
  id                Int             @id @default(autoincrement())
  name              String
  avatar            String
  review            String
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
}

enum Role {
  USER
  ADMIN
}
